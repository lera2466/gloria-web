---
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PriceCard from "../components/PriceCard.astro";
---

<Base title="Precios - Fisio a Domicilio">
  <section class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-8">Precios</h1>
    <div class="grid md:grid-cols-3 gap-6">
      <PriceCard
        title="Sesión estándar"
        price={60}
        features={[
          "50-60 min",
          "Tratamiento personalizado",
          "Material y desplazamiento incluido",
        ]}
        highlight
      />
      <PriceCard
        title="Bono 5 sesiones"
        price={280}
        features={["Plan de seguimiento incluido", "Válido 6 meses"]}
        highlight
      />
      <PriceCard
        title="Bono 10 sesiones"
        price={520}
        features={["Plan de seguimiento incluido", "Válido 1 año"]}
        highlight
      />
    </div>
    <!-- <p class="text-sm text-slate-600 mt-4">
      * Suplemento fuera de M-30 según distancia. Contacta para presupuesto.
    </p> -->
  </section>
</Base>
