  address: {
    "@type": "PostalAddress",
    addressLocality: "Madrid",
    addressRegion: "Comunidad de Madrid",
    addressCountry: "ES",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: 40.5167,
    longitude: -3.5333,
  },
  url: "https://fisioterapiagrdomicilio.com",
  telephone: "+34681805966",
  email: "fisioterapiagrdomicilio@gmail.com",
  priceRange: "€€",
  openingHoursSpecification: [
    {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      opens: "09:00",
      closes: "20:00",
    },
    {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: "Saturday",
      opens: "09:00",
      closes: "14:00",
    },
  ],
  areaServed: [
    {
      "@type": "City",
      name: "Torrejón de Ardoz",
    },
    {
      "@type": "City",
      name: "Alcalá de Henares",
    },
    {
      "@type": "City",
      name: "Villalbilla",
    },
    {
      "@type": "City",
      name: "Fuente el Saz de Jarama",
    },
    {
      "@type": "City",
      name: "Daganzo de Arriba",
    },
    {
      "@type": "City",
      name: "Ajalvir",
    },
  ],
  hasOfferCatalog: {
    "@type": "OfferCatalog",
    name: "Servicios de Fisioterapia",
    itemListElement: [
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Rehabilitación Musculoesquelética",
